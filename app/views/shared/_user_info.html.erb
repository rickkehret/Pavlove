<div class="user_info">
	<a href="<%= user_path(current_user) %>">
		<%= gravatar_for current_user, :size => 30 %>
		<span class="user_name">
		<%= current_user.name %>
		</span>
		<span class="inspirations">
			<%= pluralize(current_user.inspirations.count, "inspiration") %>
		</span>
	</a>
</div>
